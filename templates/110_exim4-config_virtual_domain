
### router/110_exim4-config_virtual_domain
#################################


virtual_domain:
  debug_print = "R: virtual_domain for $local_part@$domain"
  driver = accept
  user = vmail
  group = vmail
  domains = dsearch;/var/lib/mail
  require_files = vmail,vmail:/var/lib/mail/$domain/$local_part
  transport = vmail_spool
