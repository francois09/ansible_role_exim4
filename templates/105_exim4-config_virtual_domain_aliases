
### router/105_exim4-config_virtual_domain_aliases
#################################


virtual_domain_aliases:
  debug_print = "R: virtual_domain_alias for $local_part@$domain"
  driver = redirect
  user = mail
  group = mail
  domains = dsearch;/var/lib/mail
  require_files = /var/lib/mail/$domain/aliases
  data = ${lookup{$local_part}lsearch{/var/lib/mail/$domain/aliases}}

#  transport = vmail_spool
#  require_files = mail,mail:/var/spool/vmail/$domain/$local_part
